<?xml version="1.0" encoding="utf-8"?>


<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">


    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:src="@drawable/classique_logo"
            android:layout_width="match_parent"
            android:scaleType="fitStart"
            android:layout_height="175dp"
            android:id="@+id/imageView"
            android:background="#2E7D32"
             />


        <TextView
            android:text="creating delicious pastries, bakeries and oriental sweets"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="25sp"
            android:layout_below="@+id/imageView"
            android:paddingTop="0dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="25dp"
            android:textStyle="italic"
            android:id="@+id/text1"
            />

        <ImageView
            android:src="@drawable/ic_add_location_black_24dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@id/text1"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:id="@+id/image2"

           />


        <TextView
            android:text="alex-qesm elraml-fleming"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="25sp"
            android:layout_toRightOf="@id/image2"
            android:layout_below="@id/text1"
            android:layout_marginTop="17dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/text2"
            />

        <ImageView
            android:src="@drawable/ic_call_black_24dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@id/image2"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:id="@+id/image3"
            />

        <TextView
            android:text="03/5551414"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="25sp"
            android:layout_toRightOf="@id/image3"
            android:layout_below="@id/text2"
            android:layout_marginTop="27dp"
            android:layout_marginLeft="15dp"
            android:id="@+id/text4"
            />


        <ImageView
            android:src="@drawable/ic_query_builder_black_24dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@id/image3"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:id="@+id/image5"
            />


        <TextView
            android:text="from:8am to 12:30 am"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="25sp"
            android:layout_toRightOf="@id/image5"
            android:layout_below="@id/text4"
            android:layout_marginTop="27dp"
            android:layout_marginLeft="15dp"
            android:id="@+id/text5"
            />
        <ImageView
            android:src="@drawable/ic_email_black_24dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@id/image5"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:id="@+id/image6"
            />


        <TextView
            android:text="classique patisserie.com"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="25sp"
            android:layout_toRightOf="@id/image5"
            android:layout_below="@id/text5"
            android:layout_marginTop="27dp"
            android:layout_marginLeft="15dp"
            android:id="@+id/text6"
            />
    </RelativeLayout>

</ScrollView>